<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista gości</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let visitor of visitors) { %>
            <tr>
                <td><%= visitor.firstName %></td>
                <td><%= visitor.lastName %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="visitors/details/<%=visitor._id%>"
                                class="list-actions-button-details">Szczegóły</a></li>
                        <li>
                            <a href="visitors/edit/<%=visitor._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="visitors/delete/<%=visitor._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>

                    </ul>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="visitors/add" class="button-add">Dodaj nowego gościa</a></p>
</main>


<%- include('../../fragments/footer.ejs') %>