<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista recenzji</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Gość</th>
                <th>Danie</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let review of reviews) { %>
            <tr>
                <td><%= review.visitor.firstName %> <%= review.visitor.lastName %></td>
                <td><%= review.meal.name %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="reviews/details/<%=review._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="reviews/edit/<%=review._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="reviews/delete/<%=review._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="reviews/add" class="button-add">Dodaj nową recenzję</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>