<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista potraw</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let meal of meals) { %>
            <tr>
                <td> <%= meal.name %> </td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="meals/details/<%=meal._id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li>
                            <a href="meals/edit/<%=meal._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="meals/delete/<%=meal._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>

                    </ul>
                </td>
            </tr>
            <% } %>
        </tbody>

    </table>
    <p><a href="meals/add" class="button-add">Dodaj nową potrawe</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>